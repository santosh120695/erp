<p id="notice"><%= notice %></p>

<h1>Order Details</h1>

<table>
  <thead>
    <tr>
      <th>Pi</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Rate</th>
      <th>Discount percentage</th>
      <th>Amount</th>
      <th>Tax</th>
      <th>Total amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.pi_id %></td>
        <td><%= order_detail.product_id %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.rate %></td>
        <td><%= order_detail.discount_percentage %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.tax %></td>
        <td><%= order_detail.total_amount %></td>
        <td><%= order_detail.status %></td>
        <td><%= link_to 'Show', order_detail %></td>
        <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
        <td><%= link_to 'Destroy', order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

