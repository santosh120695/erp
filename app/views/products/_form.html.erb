<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,class:"form-control",placeholder:"Name of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code,class:"form-control",placeholder:"Code of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :dimension %>
    <%= form.text_field :dimension,class:"form-control",placeholder:"LxWxD" %>
  </div>

  <div class="form-group">
    <%= form.label :finish %>
    <%= form.text_field :finish,class:"form-control",placeholder:"Finish of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes,class:"form-control",placeholder:"Notes/remarks on the product " %>
  </div>

  <div class="form-group">
    <%= form.label :packing_size %>
    <%= form.text_field :packing_size,class:"form-control",placeholder:"Packing size of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :cbm %>
    <%= form.text_field :cbm,class:"form-control",placeholder:"CBM" %>
  </div>

  <div class="form-group">
    <%= form.label :range %>
    <%= form.text_field :range,class:"form-control",placeholder:"Range of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :cost %>
    <%= form.text_field :cost,class:"form-control",placeholder:"Base cost of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :images %>
    <%= form.file_field :images,:multiple=>true %>
  </div>


  <div class="form-group">
    <%= form.submit "Create Product",class:"btn btn-success" %>
  </div>
<% end %>
