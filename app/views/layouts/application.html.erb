<!DOCTYPE html>
<html>
  <head>
    <title>Deepak Cybit Boiler Plate</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render "globals/meta" %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="c-app">
  <%= render "globals/sidebar" %>
  <div class="c-wrapper c-fixed-components">
   <%= render "globals/header" %>
    <div class="c-body">
      <main class="c-main">
        <div class="container-fluid">
          <div class="fade-in">
           <%= yield %>
          </div>
        </div>
      </main>
<%= render "globals/footer" %>
    </div>
  </div>
  <!-- CoreUI and necessary plugins-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@2.9.1/dist/Chart.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.1/dist/Chart.min.js"></script>
<%= javascript_pack_tag "main" %>
  <%= yield :js %>
  </body>
</html>
