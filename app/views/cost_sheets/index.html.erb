
<%= content_for :breadcrumb do %>
  <li class="breadcrumb-item">Home</li>

  <li class="breadcrumb-item "><%= link_to "Products",products_path %></li>
  <li class="breadcrumb-item "><%= link_to @product.name,@product %></li>
  <li class="breadcrumb-item active">Costing Sheets</li>

<% end %>

<%= content_for :buttons do %>
  <%= link_to new_cost_sheet_path(product_id: @product.id),class:"btn btn-primary btn-sm float-right" do %>
    <i class="fa fa-plus mr-2"></i> New Cost Sheet
  <% end %>
<% end %>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cost_sheets.each do |cost_sheet| %>
      <tr>
        <td><%= cost_sheet.name %></td>
        <td><%= cost_sheet.active %></td>
        <td><%= cost_sheet.version %></td>
        <td><%= link_to  cost_sheet ,class:"btn btn-sm btn-info" do %>
          <i class="fa fa-eye mr-2"></i> Details
          <% end %>
            </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

