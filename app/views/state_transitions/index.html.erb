<p id="notice"><%= notice %></p>

<h1>State Transitions</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Comment</th>
      <th>User</th>
      <th>Order detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_transitions.each do |state_transition| %>
      <tr>
        <td><%= state_transition.from %></td>
        <td><%= state_transition.to %></td>
        <td><%= state_transition.comment %></td>
        <td><%= state_transition.user_id %></td>
        <td><%= state_transition.order_detail_id %></td>
        <td><%= link_to 'Show', state_transition %></td>
        <td><%= link_to 'Edit', edit_state_transition_path(state_transition) %></td>
        <td><%= link_to 'Destroy', state_transition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State Transition', new_state_transition_path %>
